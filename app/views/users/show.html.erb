<h1>Welcome to <%=@user.name%>'s profile!</h1>
<% if @user == current_user %>
<%= link_to 'edit', edit_user_path(@user) %>
<% end %>

<h2><%=@user.name%>'s profile details below:</h2>
<ul>
  <li>AGE: <%=@user.age%></li>
  <li>BACKGROUND: <%=@user.background_information%></li>
  <li>INTERESTS: <%=@user.interests%></li>
  <li>WILLING TO PAY: <%=@user.is_desperate%></li>
</ul>

<h2> Here are restaurants <%=@user.name%> has matched with!</h2>
<ul>
  <% @match_restaurants.each do |match_restaurant|%>
  <% @user_restaurants.each do |restaurant|%>
  <li><%= link_to restaurant.name, match_restaurant_path(match_restaurant.id)%></li>
  <%end%>
  <%end%>
</ul>

<h3> Here are users <%=@user.name%> has matched with!</h3>
<ul>
<% @user.swipes_as_swiper.each do |swipe|%>
  <li><%=link_to swipe.swipee.name, user_path(swipe.swipee.id)%></li>
<%end%>
</ul>

<ul>
<% @user.swipes_as_swipee.each do |swipe|%>
  <li><%=link_to swipe.swiper.name, user_path(swipe.swiper.id)%></li>
<%end%>
</ul>
