<%= form_for @user do |f| %>
  <fieldset>
    <legend>Fill in Your Details</legend>
      <ul>
        <li>
          <%= f.label :name %>
          <%= f.text_field :name %>
        </li>
        <li>
          <%= f.label :age %>
          <%= f.text_field :age %>
        </li>
        <li>
          <%= f.label :background_information %>
          <%= f.text_area :background_information %>
        </li>
        <li>
          <%= f.label :interests %>
          Please list your interests separated by commas.
          <%= f.text_area :interests_as_string %>
        </li>
        <li>
          <%= f.label :is_desperate %>
          <%=  f.text_field :is_desperate %>
        </li>
      </ul>
  <%= f.submit %>

  </fieldset>
<% end %>
