<%= form_for @user,:html => {:class => "userform"} do |f| %>
  <% [:name, :age, :background_information, :interests, :is_desperate].each do |field|  %>
    <div>
      <%= f.label field %>
      <%= f.text_field field, :class => 'userinput' %>
    </div>
  <% end %>
  <%= f.submit 'Submit', :class => 'usersubmit' %>
<% end %>
