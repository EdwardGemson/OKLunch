<h1> Here are the current messages between you and <%= @recipient%></h1>
  <% @all_messages.each do |message| %>
    <% if current_user.id == message.sender_id %>
          <strong class="primary-font"><%= message.sender.name %></strong>
              <span class="glyphicon glyphicon-time"></span>sent at <%= std_format_date(message.created_at) %>
            </small>
        </div>
        <p class="pull-left"><%= message.content %></p>
      </div>
    <% else %>
    <div class="chat-body clearfix">
      <div class="header">
        <strong class="primary-font"><%= message.sender.name %></strong>
          <small class=" text-muted">
            <span class="glyphicon glyphicon-time"></span>sent at <%= std_format_date(message.created_at) %>
          </small>
      </div>
      <p class="pull-left"><%= message.content %></p>
    </div>
  </li>
  <% end %>
<% end %>
<h2> Submit a new message?</h2>
  <%= form_for new_message_path do |f| %>
  Content: <%=f.text_field :content%>
<%= f.hidden_field :conversation_id, value: @conversation.id%>
<%= f.hidden_field :match_user_id, value: @match_user.id%>
<%= f.submit%>
<%end%>
