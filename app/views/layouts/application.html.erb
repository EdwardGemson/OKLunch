<!DOCTYPE html>
<html>
<head>
  <title>OKLunch</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if flash.any?  %>
  <div id="flash-container">
    <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: "flash-#{name}" %>
    <% end %>
  </div>
  <% end %>

  <div id="heading">
    <div id = "logo">
      <%= link_to image_tag("http://www.takepart.com/sites/default/files/styles/campaign_news_3x2/public/foodinc_promos_2.jpg?itok=X3v7ZHb6", size:"300x200"), root_path %>
    </div>

    <div id="user_nav">
      <% if current_user %>
        Signed in as <strong><%= current_user.name %></strong>!
        <%= link_to "Sign out", logout_path, id: "sign_out" %>
      <% else %>
       <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %>
      <% end %>
      <%= link_to 'Home', restaurants_path %>
    </div>
  </div>
  <%= yield %>

</body>
</html>
