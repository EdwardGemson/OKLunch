<!DOCTYPE html>
<html>
<head>
  <title>OKLunch</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Flamenco' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Asap' rel='stylesheet' type='text/css'>
</head>
<body>
  <div id='main'>
    <div id="heading">
      <div id = "logo">
        <%= link_to image_tag("oklunch.png", size:"200x125"), root_path %>
      </div>
      <div id="user_nav">
        <% if current_user %>
          Signed in as <strong><%= link_to current_user.name, user_path(current_user.id) %></strong>!
          <%= link_to image_tag(current_user.image), user_path(current_user.id) %>
          <%= link_to "Sign out", logout_path, id: "sign_out" %>
        <% else %>
         <%= link_to image_tag('fb2.png', size:"220x44"), "/auth/facebook", id: "sign_in" %>
        <% end %>
      </div>
      <% if flash.any?  %>
      <div id="flash-container">
        <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: "flash-#{name}" %>
        <% end %>
      </div>
      <% end %>
    </div>
    <%= yield %>
  </div>
</body>
</html>
